<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnMotocyle1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="Motorcycle : 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMotocyle2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="Motorcycle : 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCar1"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#F44336"
        android:text="CAR : 0"
        app:layout_constraintBottom_toTopOf="@+id/btnMotocyle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTruck1"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#4CAF50"
        android:text="TRUCK : 0"
        app:layout_constraintBottom_toTopOf="@+id/btnMotocyle1"
        app:layout_constraintStart_toEndOf="@+id/btnCar1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <Button
        android:id="@+id/btnBus1"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#9C27B0"
        android:text="BUS : 0"
        app:layout_constraintBottom_toTopOf="@+id/btnMotocyle1"
        app:layout_constraintStart_toEndOf="@+id/btnTruck1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTruck2"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#4CAF50"
        android:text="TRUCK : 0"
        app:layout_constraintBottom_toTopOf="@+id/btnMotocyle2"
        app:layout_constraintEnd_toStartOf="@+id/btnCar2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <Button
        android:id="@+id/btnBus2"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="203dp"
        android:backgroundTint="#9C27B0"
        android:text="BUS : 0"
        app:layout_constraintBottom_toBottomOf="@+id/btnMotocyle2"
        app:layout_constraintEnd_toStartOf="@+id/btnTruck2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCar2"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#F44336"
        android:text="CAR : 0"
        app:layout_constraintBottom_toTopOf="@+id/btnMotocyle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#009688"
        android:text="RESET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnBus2"
        app:layout_constraintStart_toEndOf="@+id/btnMotocyle1"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>